---
import Layout from '../layouts/Layout.astro'
---

<Layout title="talk">
  <div id="talk" class="container">
    <header class="banner">
      <h1>Talk</h1>
      <div class="buttons">
        <a href="/">back to site</a>
        <span class="line"></span>
        <button class="add_tag" data-type="wc-voice">Voice</button>
        <button class="add_tag" data-type="wc-say-as">Say As</button>
        <button class="add_tag" data-type="wc-emphasis">Emphasis</button>
        <button class="add_tag" data-type="wc-prosody">Prosody</button>
        <button class="add_tag" data-type="wc-break">Break</button>
        <span class="line"></span>
        <button id="clear_all">Clear</button>
        <button id="play_all">Play</button>
      </div>
    </header>
    <main class="content">
      <aside class="left-column" id="edit_area"></aside>
      <form class="right-column" id="input_area">
        <button id="hidden_button" type="submit">Fake Button</button>
        <div contenteditable id="main_input">
        </div>
      </form>
    </main>
  </div>
</Layout>

<script src="../core/talk/index.ts"></script>

<style is:global>

  html:has(#talk) {
    background-color: white;
  }

  html:has(#talk) site-menu {
    display: none;
  }

  .container {
    display: grid;
    grid-template-rows: auto 1fr;
    grid-template-columns: 1fr;
    max-height: 100vh;
    overflow: hidden;
    height:100vh;
  }

  .content {
    display: grid;
    grid-template-columns: 1fr 3fr;
    gap: 0.2rem;
    padding: 0.2rem;
  }

  .left-column {
    background-color: #f0f0f0;
    padding: 1rem;
    max-height: calc(100vh - 3rem);
    overflow-y: auto;
  }

  .right-column {
    background-color: #efefef;
    padding: 0;
    max-height: calc(100vh - 3rem);
    overflow-y: auto;
  }

  .banner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #e0e0e0;
    color: #9b9b9b;
    padding: 1rem;
    height: 3rem;
  }

  .banner h1 {
    margin: 0;
  }

  .buttons {
    display: flex;
    align-items: center;
  }

  .buttons span.line {
    display: inline-block;
    border-left:1px solid rgba(0, 0, 0, 0.309);
    margin-left:.6rem;
    height: 1.5rem;
  }

  .buttons button {
    margin-left: 10px;
    padding: 0.5rem 1rem;
    background-color: white;
    /* color: #007acc; */
    border: none;
    cursor: pointer;
    border-radius: 5px;
  }

  .buttons button:hover {
    background-color: #005f99;
    color: white;
  }


  .right-column > div {
    padding:1rem;
    max-height: calc(100vh - 3.3rem);
    height:100%;
  }

  #hidden_button {
    display: none;
  }

  .talker {
    display: flex;
    gap: 10px;
    margin-top: 2rem;
  }
  .talker.preview {
    margin-top: 1rem;
    align-items: flex-start;
  }
  .talker button {
    background-color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    font-size: 1.1rem;
    padding: 0.2rem .5rem;
  }
  .talker.preview button {
    font-size: 0.8rem;
  }
  .talker .group {
    flex: 1;
  }
  .talker .name {
    font-weight: 600;
  }
  .talker .face {
  }
  .talker .face img {
    width: 80px;
    height: 80px;
    mix-blend-mode: multiply;
  }
  .talker.preview .face img {
    width: 50px;
    height: 50px;
    filter: grayscale(0.6) opacity(0.4);
  }
  .talker .sample {
  }
  .talker .action {
    display: flex;
    gap: 10px;
    align-items: center;
    justify-content: space-between;
    padding-top: 0.5rem;
  }
  .talker.preview .action {
    padding-top: 0rem;
  }

  .talker .action > .subgroup {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .talker .action .plus {
    font-size: 1.5rem;
    padding: 0;
    border: 0;
    background-color: transparent;
  }
  .talker textarea {
    display: block;
    width: 100%;
    min-height: 4rem;
    box-sizing: border-box;
    padding: 0.3rem;
    min-height: 4.5rem;
  }
  wc-voice,
  wc-say-as,
  wc-break,
  wc-emphasis,
  wc-prosody {
    display: inline-block;
    border: 1px solid rgba(0, 0, 255, 0.344);
    padding: 0 .4rem;
    margin: .2rem;
    cursor: pointer;
  }

  wc-empahsis {
    border: 1px solid rgba(62, 175, 109, 0.344);
  }

  wc-say-as {
    border: 1px solid rgba(0, 0, 0, 0.344);
  }
  wc-voice {
    border: 1px dotted rgba(255, 0, 0, .3);
    display: block;
    padding: 1rem;
  }

  .sub_main_input {
    padding:1rem;
    background-color: white;
    min-height: 20rem;
    margin-top:2rem;
  }

  .sub_main_input > img {
    display: none;
  }

  .voice_face > img {
    max-width: 100px;
  }

  wc-voice {
    position: relative;
    padding-left: 120px;
    min-height: 100px;
  }

  wc-break {
    border: none;
  }
  wc-break:before {
    content:'ð›² ';
  }

  wc-voice:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100px;
    height: 100px;
    background-image: var(--background-image);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 1;
  }


</style>
