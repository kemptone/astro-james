---
import ProtoForm from '../components/ProtoForm/ProtoForm'
import WCFloatingLabel from '../components/WCFloatingLabel.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title="ampm">
  <h1>Mommy's Crossword Puzzle</h1>
  <div id="crosswordgrid"></div>
  <form id="crosswords">
    <WCFloatingLabel label={'Words'} adderror={'1'}>
      <textarea name="words" id="" cols="30" rows="5" required minlength="2"
        >üòê üòÄ üò° james kempton is here</textarea
      >
    </WCFloatingLabel>
    <div class="group">
      <WCFloatingLabel label={'width'} adderror={'1'}>
        <input type="number" name="width" value="9" min="3" required />
      </WCFloatingLabel>
      <WCFloatingLabel label={'height'} adderror={'1'}>
        <input type="number" name="height" value="9" min="3" required />
      </WCFloatingLabel>

      <button type="submit">Submit</button>
    </div>
  </form>
</Layout>

<script src="../core/crosswords/Crosswords.ts"></script>

<style is:inline>
  html,
  body {
    background-color: white;
  }

  input {
    padding: 9px;
    border-radius: 3px;
  }

  #crosswordgrid {
    margin-top: 80px;
  }
  .group {
    display: flex;
    gap: 10px;
    justify-content: space-between;
  }

  .group button {
    padding-inline: 30px;
  }

  #crosswords {
    max-width: 1200px;
    padding: 10px;
    margin-inline: auto;
  }

  #crosswordgrid {
    display: flex;
    flex-direction: column;
    gap: 0px;
    margin-inline: auto;
    width: min-content;
    border: 1px solid #000;
  }
  #crosswordgrid .row {
    display: flex;
    gap: 0px;
    /* justify-content: space-between; */
  }

  #crosswordgrid .cell {
    width: 3.2rem;
    height: 3.2rem;
    border: 1px solid #000;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.8rem;
  }

  @media print {
    #crosswords {
      display:none;
    }
  }

</style>
