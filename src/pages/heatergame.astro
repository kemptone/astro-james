---
import Layout from '../layouts/Layout.astro'
import WCFloatingLabel from '../components/WCFloatingLabel.astro'
---

<Layout title="ampm">
  <h1>Heater Game</h1>
  <form id="main">
    <fieldset>

      <WCFloatingLabel label="Name of inputs" addclear={'false'}>
        <input
          type="text"
          autocomplete="off"
          placeholder="Name of inputs"
          name="name_of_inputs"
          id="name_of_inputs"
          value="pipes"
        />
      </WCFloatingLabel>

      <WCFloatingLabel label="Speak the values">
        <input
          type="checkbox"
          name="speak_the_values"
          checked
        />
      </WCFloatingLabel>

      <div id="inputs"></div>

      <button type="submit" style="padding-inline:1rem; padding-block:.5rem"
        >Submit</button
      >
    </fieldset>
  </form>
</Layout>

<script src="../core/acgame/ACGame"></script>

<style is:inline>
  form {
    margin-top: 100px;
  }

  #main fieldset {
    min-width: 230px;
    padding: 2rem;
    margin: 0 auto;
    text-align: center;
  }

  #main fieldset wc-floating-label-input {
    text-align: center;
  }

  #main fieldset input {
    padding: 0.2rem;
    text-align: center;
    font-size: 1.5rem;
    display: inline-block;
  }
</style>
