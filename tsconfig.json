{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowJs": true,
    "jsxImportSource": "preact",
    "allowImportingTsExtensions": true,
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "extends": "astro/tsconfigs/strict"
}
